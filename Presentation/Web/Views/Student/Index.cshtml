<h1>Student</h1>

<table id="example" class="table table-striped" style="width:100%">

</table>

<script>
    <partial name="_modal" />
    $(document).ready(function () {
        LoadData();
        $('.multipleSelect').fastselect();
    })
    
    function LoadData() {
        $.get("/cp/Role/GetRoles", function (data) {
            $("#example").html(data);
            $('#example').DataTable();
        });
    }
    function Delete(e) {
        $(e.currentTarget).closest('.row').remove();
    }

    function Add(e) {
        var pattern = `  <div class="row">
                <div class="col-sm-6">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="fullName" name="FullName">
                        <label for="floatingInput">Full Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="datetime" class="form-control" id="dOB" name="dOB">
                        <label for="floatingInput">Date Of Birt</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <select class="multipleSelect" multiple name="teachers">
                        <option value="Bangladesh">Bangladesh</option>
                        <option value="Belgium">Belgium</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <input type="button" value="Delete" onclick="Delete(event)" class="btn btn-warning">
                </div>
            </div>`;

        $(e.currentTarget).closest('form').after(pattern);

        $('.multipleSelect').fastselect();
    }
</script>